<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.myAppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!--<style name="Theme.MyCompose" parent="android:Theme.Material.NoActionBar">-->
        <!-- Status Bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Window Light Status Bar for visibility of dark icons on the status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Window Light Navigation Bar for dark icons on the navigation bar -->
        <!-- This will work only on API 27+ -->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Splash Screen for 31 api bellow -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- Android 12+ (api 30+ ) Splash Screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">
            @drawable/s
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">2000</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/white
        </item>
    </style>
</resources>